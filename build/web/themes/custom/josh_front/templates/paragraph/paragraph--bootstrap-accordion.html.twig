{% extends "paragraph.html.twig" %}

{% set collapse_id = 'paragraph--0' ~ paragraph.id() %}

{% set content %}

<div class="panel panel-default">
  <div class="panel-heading">
    <a class="collapsed" role="button" data-toggle="collapse" href="#{{ collapse_id }}" aria-expanded="false" aria-controls="collapseExample">
      {{ content.field_title }}
    </a>
  </div>
  <div id="{{ collapse_id }}" class="panel-collapse collapse" aria-expanded="false">
    <div class="panel-body">
      {{ content|without('field_title') }}
    </div>
  </div>
</div>

{% endset %}
